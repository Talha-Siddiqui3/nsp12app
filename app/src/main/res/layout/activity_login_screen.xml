<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Autentication.login_screen">

    <TextView
        android:id="@+id/text_phone_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/text_phone_entry"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="124dp" />

    <EditText
        android:id="@+id/phone_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_phone_entry"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="phone"
        android:text="@string/phone_entry" />

    <TextView
        android:id="@+id/code_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/code_timer" />

    <Button
        android:id="@+id/send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_timer"
        android:layout_centerHorizontal="true"
        android:text="@string/send_code" />

    <TextView
        android:id="@+id/code_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_code"
        android:layout_centerHorizontal="true"
        android:text="@string/code_display" />

    <EditText
        android:id="@+id/code_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_display"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="phone"
        android:text="@string/code_entry"
        android:textAlignment="center" />

    <Button
        android:id="@+id/verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/verify_code" />

</RelativeLayout>