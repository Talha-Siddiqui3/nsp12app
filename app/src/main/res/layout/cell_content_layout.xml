<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Outer_Layout_Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp"
    android:visibility="gone">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_blue"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constrainedHeight="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:src="@color/contentDividerLine"
                android:visibility="visible" />

            <TextView
                android:id="@+id/NumberOfRatings_FoldingVIew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ratingBar_FoldingView"
                android:layout_marginStart="171dp"
                android:text="(2)"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Ta_Name_FoldingView_Unfolded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="81dp"
                android:layout_marginTop="12dp"
                android:text="Muhammad Talha Siddiqui"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photoStudent_circleView_FOR_FoldingView"
                style="main_studentphoto"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:src="@drawable/student_mode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/ratingBar_FoldingView"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Ta_Name_FoldingView_Unfolded"
                android:layout_marginTop="42dp"
                android:layout_weight="1"
                android:numStars="5"
                android:rating="5" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="55dp"
                android:src="@color/contentDividerLine" />

            <TextView
                android:id="@+id/Ta_Id_FoldingVIew"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/Teaches_FoldingView_Unfolded"
                android:layout_marginEnd="36dp"
                android:text="2019172"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Ta_Id_Title_FoldingVIew"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Ta_Id_FoldingVIew"
                android:layout_alignTop="@+id/Teaches_Title_FoldingVIew"
                android:text="ID"
                android:textAlignment="textStart"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/Teaches_FoldingView_Unfolded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Teaches_Title_FoldingVIew"
                android:layout_marginTop="30dp"
                android:text="Physics"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Teaches_Title_FoldingVIew"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="3dp"
                android:text="Teaches"
                android:textAlignment="textStart"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/Monday_Title"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="7dp"
                android:text="Monday:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Tuesday_Title"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:text="Tuesday:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Monday_Title" />

            <TextView
                android:id="@+id/Wednesday_Title"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:text="Wednesday:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Tuesday_Title" />

            <TextView
                android:id="@+id/Thursday_Title"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:text="Thursday:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Wednesday_Title" />

            <TextView
                android:id="@+id/Friday_Title"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:text="Friday:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Thursday_Title" />

            <TextView
                android:id="@+id/Monday_Time"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="7dp"
                android:text="@string/Default_Time_Ta"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Tuesday_Time"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="23dp"
                android:text="@string/Default_Time_Ta"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Monday_Time" />

            <TextView
                android:id="@+id/Wednesday_Time"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="23dp"
                android:text="@string/Default_Time_Ta"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Tuesday_Time" />

            <TextView
                android:id="@+id/Thursday_Time"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="23dp"
                android:text="@string/Default_Time_Ta"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Wednesday_Time" />

            <TextView
                android:id="@+id/Friday_Time"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="23dp"
                android:text="@string/Default_Time_Ta"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Thursday_Time" />

            <Button
                android:id="@+id/Submit_Button_FoldingView"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="210dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/submit_Button_textView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</RelativeLayout>



