<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BucketDataLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/_9sdp"
    android:paddingBottom="2dp">


    <ProgressBar
        android:id="@+id/loading_bucketData1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="@dimen/_2sdp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/content_image_soc"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_5sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/student_mode" />

    <TextView
        android:id="@+id/content_name_soc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_image_soc"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="@dimen/_1sdp"
        android:text="name"
        android:textAlignment="center"
        android:textSize="@dimen/_10ssp" />


</RelativeLayout>