<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Autentication.phone_verification.login_screen">

    <EditText
        android:id="@+id/phone_entry"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/assistant"
        android:gravity="left"
        android:hint="@string/text_phone_entry"
        android:inputType="phone"
        android:textColorHint="#ced3d7"
        android:textSize="15dp" />

    <Button
        android:id="@+id/send_code"

        android:layout_width="270dp"

        android:layout_height="60dp"
        android:layout_below="@+id/phone_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_outline"
        android:enabled="false"


        android:fontFamily="@font/assistant"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/send_code"
        android:textColor="#fff"

        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/blue_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blue_banner_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#203e5f" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/pink_shark_width"
        android:layout_height="@dimen/pink_shark_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pink_shark_marginTop"
        android:src="@drawable/shark_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/allerta"
        android:text="VERIFY PHONE NUMBER"
        android:textColor="#000"
        android:textSize="25sp" />

</RelativeLayout>