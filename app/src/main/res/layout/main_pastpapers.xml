<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/nav_header"
        android:minHeight="?attr/actionBarSize">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoStudent_circleView"
            style="main_studentphoto"
            android:layout_width="@dimen/main_studentphoto"
            android:layout_height="@dimen/main_studentphoto"
            android:layout_below="@+id/toolbar_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sample" />

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/assistant_bold"
            android:text="Past papers"
            android:textColor="#fff"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_main"
        android:layout_below="@+id/toolbar_top"
        android:background="@color/colorAccent"
        android:paddingBottom="5dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/search_filter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/filterButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/search_pastpapers"
                    android:background="#fff"
                    android:padding="10dp"
                    android:src="@drawable/filter_icon" />

                <EditText
                    android:id="@+id/search_pastpapers"
                    style="@style/text_entry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="50dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/search_hint"
                    android:inputType="textPersonName"
                    android:padding="3dp" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </RelativeLayout>
    <com.btb.nixorstudentapplication.GeneralLayout.navigator_header
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>