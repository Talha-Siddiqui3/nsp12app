<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Sharks_on_cloud.Soc_Main">

    <RelativeLayout
        android:id="@+id/my_bucket_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayoutSoc_Subjects"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView9"
            style="@style/headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:text="My Bucket"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:srcCompat="@drawable/bucket_icon_white" />

        <TextView
            android:id="@+id/textView10"
            style="@style/headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:text="Class:"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/className_MyBucket"
            style="@style/headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toEndOf="@+id/textView10"
            android:text="500"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/bucketPoints_MyBucket"
            style="@style/headings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="500 points"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13ssp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutSoc_Subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_top_soc"
        android:layout_margin="1dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented_soc_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checkedButton="@+id/my_classes_soc"
            android:orientation="horizontal"
            android:visibility="gone"
            app:sc_border_width="2dp"
            app:sc_corner_radius="5dp"
            app:sc_tint_color="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="169dp">

            <RadioButton
                android:id="@+id/my_classes_soc"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MyClasses"
                android:textAlignment="center"

                android:visibility="visible" />

            <RadioButton
                android:id="@+id/most_recent_soc"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Most Recent"
                android:textAlignment="center"
                android:visibility="visible" />


            <RadioButton
                android:id="@+id/top_rated_soc"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Top Rated"
                android:textAlignment="center"
                android:visibility="visible" />


        </info.hoang8f.android.segmented.SegmentedGroup>

        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented_soc_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checkedButton="@+id/MySubjects_Button"
            android:orientation="horizontal"
            android:visibility="invisible"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="169dp">

            <RadioButton
                android:id="@+id/MySubjects_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MySubjects"
                android:textAlignment="center"

                android:visibility="visible" />

            <RadioButton
                android:id="@+id/AS_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AS"
                android:textAlignment="center"
                android:visibility="visible" />


            <RadioButton
                android:id="@+id/A2_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A2"
                android:textAlignment="center"
                android:visibility="visible" />


        </info.hoang8f.android.segmented.SegmentedGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_bucket_layout">

        <GridView
            android:id="@+id/gridview_bucketData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:columnWidth="@dimen/_70sdp"
            android:divider="@android:color/transparent"
            android:dividerHeight="12.0sp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:paddingTop="@dimen/_12sdp"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"/>

        <ProgressBar
            android:id="@+id/loading_soc"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rectcler_view_soc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_5sdp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <com.btb.nixorstudentapplication.GeneralLayout.activity_header
        android:id="@+id/toolbar_top_soc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true">

    </com.btb.nixorstudentapplication.GeneralLayout.activity_header>


</RelativeLayout>