<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sharks_on_cloud.Soc_Main">

    <LinearLayout
        android:id="@+id/LinearLayoutSoc_Subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_top"
        android:layout_margin="1dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented_soc_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checkedButton="@+id/my_bucket_button"
            android:orientation="horizontal"
            android:visibility="gone"
            app:sc_border_width="2dp"
            app:sc_corner_radius="10dp"
            app:sc_tint_color="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="169dp">

            <RadioButton
                android:id="@+id/my_bucket_button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MyClasses"
                android:textAlignment="center"

                android:visibility="visible" />

            <RadioButton
                android:id="@+id/most_recent_soc"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Most Recent"
                android:textAlignment="center"
                android:visibility="visible" />


            <RadioButton
                android:id="@+id/top_rated_soc"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Top Rated"
                android:textAlignment="center"
                android:visibility="visible" />


        </info.hoang8f.android.segmented.SegmentedGroup>

        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented_soc_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checkedButton="@+id/MySubjects_Button"
            android:orientation="horizontal"
            android:visibility="invisible"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp"
            segmentedgroup:sc_tint_color="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="169dp">

            <RadioButton
                android:id="@+id/MySubjects_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MySubjects"
                android:textAlignment="center"

                android:visibility="visible" />

            <RadioButton
                android:id="@+id/AS_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AS"
                android:textAlignment="center"
                android:visibility="visible" />


            <RadioButton
                android:id="@+id/A2_Button"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A2"
                android:textAlignment="center"
                android:visibility="visible" />


        </info.hoang8f.android.segmented.SegmentedGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LinearLayoutSoc_Subjects">

        <ProgressBar
            android:id="@+id/loading_soc"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rectcler_view_soc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <com.btb.nixorstudentapplication.GeneralLayout.activity_header
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true">

    </com.btb.nixorstudentapplication.GeneralLayout.activity_header>


</RelativeLayout>