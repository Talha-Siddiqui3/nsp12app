<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Autentication.phone_verification.login_screen">

    <TextView
        android:id="@+id/code_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pink_shark"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/assistant"
        android:text="@string/code_timer"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/blue_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/blue_banner_height_CE"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#203e5f" />

    <ImageView
        android:id="@+id/pink_shark"
        android:layout_width="@dimen/pink_shark_width"
        android:layout_height="@dimen/pink_shark_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shark_image" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/back_button_height"
        android:layout_height="@dimen/back_button_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/back_arrow" />

    <com.btb.nixorstudentapplication.Misc.KeyboardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/code_timer"
        android:layout_margin="5dp" />
</RelativeLayout>