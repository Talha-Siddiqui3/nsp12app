<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/main_header">

    <TextView
        android:id="@+id/activity_name"
        style="@style/headings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Activity name"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_name"
        android:layout_marginTop="10dp"
        android:background="@color/header_white"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/student_photo"
            style="main_studentphoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/student_mode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displayname"
                style="@style/sub_headings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:text="Student name"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/displayid"
                style="@style/sub_headings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="StudentID"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nixorpoints"
                style="@style/sub_headings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nixorpoints_textView"
                android:textAlignment="textEnd"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>