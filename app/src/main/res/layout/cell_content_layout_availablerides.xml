<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/Outer_Layout_Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_3sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:visibility="gone">


    <RelativeLayout
        android:id="@+id/top_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp">

        <TextView
            android:id="@+id/ride_id_foldingcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/top_bar_rl"
            android:layout_alignTop="@+id/top_bar_rl"
            android:layout_centerHorizontal="true"
            android:text="#123456"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_foldingcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/top_bar_rl"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/top_bar_rl"
            android:layout_centerHorizontal="false"
            android:paddingRight="@dimen/_4sdp"
            android:text="RS00"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar_rl"
        android:background="@android:color/white"
        android:paddingTop="@dimen/_2sdp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/displayPhoto_foldingContetn"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@color/colorPrimary"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/displayPhoto_foldingContetn"
            android:layout_width="@dimen/_53sdp"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginTop="@dimen/_7sdp"
            app:srcCompat="@drawable/newprofile" />

        <TextView
            android:id="@+id/name_foldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_toEndOf="@+id/displayPhoto_foldingContetn"
            android:text="Muhammad Talha Siddiqui"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_foldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/date_folding_content"
            android:layout_below="@+id/date_folding_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="9:45 PM"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/date_folding_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_foldingContent"
            android:layout_below="@+id/name_foldingContent"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Tomorrow, July 12, 2018"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/campus_type_foldingCOntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_folding_content"
            android:layout_alignBottom="@+id/time_foldingContent"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Main Campus"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_id_foldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_folding_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="2019185"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:background="@android:color/white"
        android:paddingTop="@dimen/_2sdp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/contact"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@color/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Vehicle_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="3dp"
            android:text="Vehicle Type:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/vehicle_Type_textview-foldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignTop="@+id/Vehicle_Type"
            android:paddingRight="@dimen/_5sdp"
            android:text="Taxi"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drivertype_textview_foldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/vehicle_Type_textview-foldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Other"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalseats_textview_FoldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/drivertype_textview_foldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="10"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seatsAvailable_textview_FoldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/occupiedseats_textview_FoldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="4"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/occupiedseats_textview_FoldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/totalseats_textview_FoldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="6"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estimatedRide_Duration_FoldingCOntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/seatsAvailable_textview_FoldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="32mins"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_Textview_FoldingCOntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/estimatedRide_Duration_FoldingCOntent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="090078601"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Total_Seats_FOldingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/Driver"
            android:layout_below="@+id/Driver"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Total Seats:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/Driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/Vehicle_Type"
            android:layout_below="@+id/Vehicle_Type"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Driver:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/Occupied_Seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/Total_Seats_FOldingContent"
            android:layout_below="@+id/Total_Seats_FOldingContent"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Occupied Seats:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/seats_avaialble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/Occupied_Seats"
            android:layout_below="@+id/Occupied_Seats"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Seats Available:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/ride_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/Occupied_Seats"
            android:layout_below="@+id/seats_avaialble"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Estimated Ride Duration:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/ride_duration"
            android:layout_below="@+id/ride_duration"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Contact:"
            android:textAlignment="textStart"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>


    <!--    <FrameLayout
        android:id="@+id/map_FoldingView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/rl_middle" />-->

    <com.btb.nixorstudentapplication.Carpool.customMapView
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map_FoldingView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@+id/rl_middle"
        >

    </com.btb.nixorstudentapplication.Carpool.customMapView>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/map_FoldingView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/button_outline_redbackground"
        android:text="Request Ride"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

</RelativeLayout>



