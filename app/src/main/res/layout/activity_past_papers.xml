<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.btb.nixorstudentapplication.GeneralLayout.navigator_header
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.btb.nixorstudentapplication.GeneralLayout.navigator_header>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/filterButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/search_pastpapers"
            android:background="#fff"
            android:padding="10dp"
            android:src="@drawable/filter_icon" />

        <EditText
            android:id="@+id/search_pastpapers"
            style="@style/text_entry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:background="#fff"
            android:ems="10"
            android:hint="@string/search_hint"
            android:inputType="textPersonName"
            android:padding="3dp" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_pastpapers"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"></android.support.v7.widget.RecyclerView>


</LinearLayout>